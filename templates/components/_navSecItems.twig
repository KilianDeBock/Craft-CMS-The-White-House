<ul class="secondary-pages">
    {% set pagesMain = craft.entries().section('pages').level(1).secondaryPage(1) %}
    {% set pagesExtra = craft.entries().section('pages').level("not 1").secondaryPage(1) %}
    {% set pagesSecondary = pagesMain | merge(pagesExtra) %}
    {% include 'components/_navItems' with {
        'pages': pagesSecondary,
        'classes': 'main-nav__menu-item--secondary link hidden'
    } %}
</ul>